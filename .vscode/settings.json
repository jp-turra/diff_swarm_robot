{
    "editor.defaultFormatter": "charliermarsh.ruff",
    "cmake.ignoreCMakeListsMissing": true,
    "python.analysis.exclude": [
        "colcon/build/**",
        "colcon/log/**",
        "build/**",
        "docs/**",
        "tools/**",
        "code/**",
    ],
    "python.analysis.include": [
        "colcon/install/**",
    ],
    "python.analysis.extraPaths": [
        "./colcon/install/ros2swarm/lib/python3.10/site-packages",
        "./colcon/install/communication_interfaces/local/lib/python3.10/dist-packages"
    ],
    "ruff.enable": true,
    "ruff.fixAll": true,
    "ruff.exclude": ["build/", "colcon/", "docs/"],
    "ruff.lint.enable": true,
    "ruff.lint.run": "onSave",
    "[python]": {
        "editor.formatOnSave": true,
    }
}